XGD:		MOV AL, [OPCODE]
		SHL AL, 1
		SHL AL, 1
		SHL AL, 1
		SHL AL, 1
		XOR AH, AH
		ADD AX, OFFSET _XGRP
		MOV DL, [SI]
		SHR DL, 1
		SHR DL, 1
		AND DX, 0EH
		ADD AX, DX
		PUSH SI
		LODSW
		MOV SI, AX
		LODSB
		XOR AH, AH
		MOV CX, AX
		JCXZ XINVD
		CLD
	REPZ	MOVSB
		POP SI
		MOV AL, 9
		STOSB
		JMP DISPD
XINVD:		MOV AX, 6264H
		STOSW
		MOV AX, 462CH
		STOSW
		MOV AX, 6830H
		STOSW
		MOV AL, 2CH
		STOSB
		MOV AL, [OPCODE]
		CALL HALX
		STOSW
		JMP ENDL

DISF:		CALL INIT
DISFL:		MOV AX, 4200H
		XOR CX, CX
		MOV DX, [PC]
		MOV BX, [INFILE]
		INT 21H
		JC DISFX
		MOV AH, 3FH
		MOV CX, 20H
		MOV DX, OFFSET INPUT+1
		MOV BX, [INFILE]
		INT 21H
		JC DISFX
		OR AL, AL
		JNZ $+3
		RET
		MOV [INPUT], AL
		MOV SI, OFFSET INPUT
		MOV DI, OFFSET OUTPUT
		CALL DISASM
		MOV AH, 40H
		MOV CL, [OUTPUT]
		XOR CH, CH
		MOV DX, OFFSET OUTPUT+1
		MOV BX, [OUTFILE]
		INT 21H
		JNC DISFL
		CALL CLOSF
		MOV AX, OFFSET OUTFN
		JMP FFAIL
DISFX:		CALL CLOSF
		MOV AX, OFFSET INFN
		JMP FFAIL

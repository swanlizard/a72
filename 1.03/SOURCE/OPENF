OPENF:		MOV AX, 3D00H
		MOV DX, OFFSET INFN
		INT 21H
		JC OPFIF
		MOV [INFILE], AX
		MOV AH, 3CH
		XOR CX, CX
		MOV DX, OFFSET OUTFN
		INT 21H
		JC OPFOF
		MOV [OUTFILE], AX
		RET
OPFIF:		MOV AX, OFFSET INFN
		JMP SHORT FFAIL
OPFOF:		MOV AH, 3EH
		MOV BX, [INFILE]
		INT 21H
		MOV AX, OFFSET OUTFN
FFAIL:		PUSH AX
		MOV SI, OFFSET EMB
		CALL STOP
		POP SI
		CALL OUTF
		STC
		RET

G4:		CALL RA
		CALL WA
		MOV AX, [ARGS]
		CMP AL, 1
		JZ G4R
		CMP AL, 2
		JZ G4M
		XOR AL, AL
		JMP FAIL
G4R:		MOV AL, [ARGS+2]
		TEST AL, 2
		JZ G4M
		MOV AL, AH
		AND AL, 7
		OR AL, 40H
		OR [OPCODE], AL
		RET
G4M:		MOV AL, [WADJ]
		OR AL, 0FEH
		XCHG AL, [OPCODE]
		OR [MODRM], AL
		JMP MMODRM

PXLW:		MOV BX, 0B800H
		MOV ES, BX
		MOV BX, CX
		SHR BX, 1
		SHR BX, 1
		INC CX
		XOR CH, CH
		XCHG CH, AH
		AND CX, 303H
		SHL CL, 1
		ROR CH, CL
		MOV DI, AX
		RCR AL, 1
		SBB AX, AX
		AND AX, 8152
		ADD BX, AX
		SHL DI, 1
		SHL DI, 1
		SHL DI, 1
		MOV AX, DI
		SHL DI, 1
		SHL DI, 1
		ADD DI, AX
		MOV AH, 0FFFCH
		ROR AH, CL
		AND ES:[BX+DI], AH
		OR ES:[BX+DI], CH
		RET

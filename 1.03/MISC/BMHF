BMHF:		TEST BL, 3
		LAHF
		SHR BL, 1
		SHR BL, 1
		ROL AH, 1
		RCL AH, 1
		CMC
		ADC BL, 0
		CLD
		MOV DL, BL
		XOR DH, DH
		MOV BP, DX
		DEC DI
BMHFLV:		MOV DH, BL
		ADD DI, BP
BMHFLH:		LODSB
		MOV AH, AL
		AND AX, 0AA55H
		ROL AL, 1
		ROR AH, 1
		OR AH, AL
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		RCL AH, 1
		RCR AL, 1
		MOV DS:[DI], AL
		DEC DI
		DEC DH
		JNZ BMHFLH
		ADD DI, BP
		DEC BH
		JNZ BMHFLV
		RET

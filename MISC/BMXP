BMXP:		XOR DH, DH
		MOV DL, BL
		SHR BL, 1
		SHR BL, 1
		TEST DL, 3
		LAHF
		ROL AH, 1
		RCL AH, 1
		CMC
		ADC BL, 0
		CLD
BMXPLV:		MOV CH, BL
		MOV BP, DI
		ADD BP, DX
BMXPLH:		LODSB
		MOV AH, AL
		MOV CL, 4
BMXPL:		RCL AH, 1
		RCL AL, 1
		RCL AH, 1
		RCL AL, 1
		AND AL, 3
		DS:
		STOSB
		CMP DI, BP
		JNC BMXP2
		DEC CL
		JNZ BMXPL
		DEC CH
		JNZ BMXPLH
BMXP2:		DEC BH
		JNZ BMXPLV
		RET

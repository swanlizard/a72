FRLT:		PUSH CX
		PUSH DX
		PUSH SI
		PUSH DI
		MOV SI, DI
		INC DI
		MOV AH, 3FH
		MOV CX, 7FH
		MOV DX, DI
		PUSH BX
		INT 21H
		POP BX
		JC RDX
		OR AX, AX
		JZ RD0
		MOV DX, AX
		MOV CX, AX
		MOV AL, 0DH
		CLD
	REPNZ	SCASB
		JNZ RD0
		CMP BYTE PTR [DI], 0AH
		JNZ RD1
		INC DI
RD1:		MOV AX, DI
		SUB AX, SI
		DEC AX
		MOV [SI], AL
		PUSH AX
		NEG AX
		ADD AX, DX
		NEG AX
		CWD
		MOV CX, DX
		MOV DX, AX
		MOV AX, 4201H
		PUSH BX
		INT 21H
		POP BX
		POP AX
		JC RDX
		JMP SHORT RD2
RD0:		XOR AX, AX
		MOV [SI], AL
RD2:		CLC
RDX:		POP DI
		POP SI
		POP DX
		POP CX
		RET

DOSR:		PUSH AX
		PUSH CX
		PUSH DX
		PUSH SI
		PUSH DI
		MOV SI, DI
		MOV AX, 0FFFDH
		STOSW
		MOV DX, SI
		MOV AH, 0AH
		INT 21H
		CLD
		XCHG DI, SI
		DEC SI
		LODSB
		XOR AH, AH
		MOV CX, AX
		JCXZ DOSR0
		PUSH CX
	REPZ	MOVSB
		POP CX
DOSR0:		MOV AX, 0A0DH
		STOSW
		XOR AL, AL
		STOSB
		POP DI
		POP SI
		MOV AH, 2
		MOV DL, 10
		INT 21H
		POP DX
		CMP CL, 1
		POP CX
		POP AX
		RET
